<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="bd2.model">

	<class name="Sitio" table="sitios">
		<id name="idSitio"  column="ID_SITIO">
			<generator class="native"/>
		</id>		
		<list name="cursos" cascade="all">
  			<key column="ID_SITIO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Curso"/>
		</list>
		<list name="usuarios" cascade="all">
  			<key column="ID_SITIO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Usuario"/>
		</list>
		<list name="documentos" cascade="all">
  			<key column="ID_SITIO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Documento"/>
		</list>
	</class>

	<class name="Curso" table="cursos">
		<id name="idCurso"  column="ID_CURSO">
			<generator class="native"/>
		</id>		
		<property name="nombre" column="NOMBRE" type="string"/>
        <property name="nivel" column="NIVEL" type="int"/>
        <list name="lecciones" cascade="all">
  			<key column="ID_CURSO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Leccion"/>
		</list>
		<many-to-one name="idioma" class="Idioma"/>
	</class>
	
	<class name="Leccion" table="lecciones">
		<id name="idLeccion"  column="ID_LECCION">
			<generator class="native"/>
		</id>		
		<property name="nombre" column="NOMBRE" type="string"/>
	</class>
	
	<class name="Diccionario" table="diccionarios">
	
		<id name="idDiccionario"  column="ID_DICCIONARIO">
			<generator class="native"/>
		</id>		
		
		<property name="edicion" column="EDICION" />
		
		<many-to-one name="idioma" class="Idioma"  unique="true" not-null="true"/>
		
		<map name="definiciones" table="diccionario_definiciones">
            <key column="idDiccionario"/>
            <index column="palabra" type="string" />
            <element column="significado" type="string" />
        </map>
	</class>
	
	<class name="Idioma" table="idiomas">
		<id name="idIdioma"  column="ID_IDIOMA">
			<generator class="native"/>
		</id>		
		<property name="nombre" column="NOMBRE" />
		<many-to-one name="diccionario" column="ID_DICCIONARIO" cascade="all" unique="true"/>
	</class>
	
	<class name="Usuario" table="usuarios">
	
		<id name="idUsuario"  column="ID_USUARIO">
			<generator class="native"/>
		</id>

		<property name="email" column="EMAIL" />
		<property name="nombre" column="NOMBRE" />
		<property name="fechaDeCreacion" column="FECHA_CREACION" />

		<joined-subclass name="Moderador" table="MODERADOR">
			<key column="ID_USUARIO"/>

			<list name="idiomas" cascade="all">
  				<key column="ID_USUARIO"/>
  				<list-index column="ORDEN"/>
				<one-to-many class="Idioma"/>
			</list>
			
		</joined-subclass>

	</class>

   <class name="Documento" table="documentos">
        <id name="idDocumento" column="ID_DOCUMENTO">
            <generator class="native" />
        </id>

        <many-to-one name="idioma" column="ID_IDIOMA" cascade="all" not-null="true"/>

        <list name="parrafos" cascade="all">
  			<key column="ID_DOCUMENTO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Parrafo"/>
		</list>

        <property name="nombre"/>
    </class>	
	
    <class name="Parrafo" table="parrafos">
        <id name="idParrafo" column="ID_PARRAFO">
            <generator class="native" />
        </id>
        <property name="texto" type="text" />
    </class>
    
    <class name="Tarea" table="tareas">
        <id name="idTarea" column="ID_TAREA">
            <generator class="native" />
        </id>
        <discriminator column="subclase_tarea" type="string" />
        <property name="fecha" />
        <property name="descripcion" />
        <property name="completa" />
    </class>
    
   <subclass name="Traduccion" extends="Tarea" discriminator-value="T">
        <property name="texto" type="text" />
        <many-to-one name="parrafo" column="ID_PARRAFO" cascade="all" />
        <many-to-one name="idioma" column="ID_IDIOMA" cascade="all" />
    </subclass>

    <subclass name="Evaluacion" extends="Tarea" discriminator-value="E">
        <many-to-one name="traduccion" column="ID_TRADUCCION" cascade="all" />
    </subclass>

</hibernate-mapping>
