<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="bd2.model">

	<class name="Sitio" table="sitios">
		<id name="idSitio" type="int" column="ID_SITIO">
			<generator class="native"/>
		</id>		
		<list name="cursos" cascade="all">
  			<key column="ID_SITIO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Curso"/>
		</list>
	</class>

	<class name="Curso" table="cursos">
		<id name="idCurso" type="int" column="ID_CURSO">
			<generator class="native"/>
		</id>		
		<property name="nombre" column="NOMBRE" type="string"/>
        <property name="nivel" column="NIVEL" type="int"/>
        <list name="lecciones" cascade="all">
  			<key column="ID_CURSO"/>
  			<list-index column="ORDEN"/>
			<one-to-many class="Leccion"/>
		</list>
		<one-to-one name="idioma" class="Idioma"/>
	</class>
	
	<class name="Leccion" table="lecciones">
		<id name="idLeccion" type="int" column="ID_LECCION">
			<generator class="native"/>
		</id>		
		<property name="nombre" column="NOMBRE" type="string"/>
	</class>
	
	<class name="Idioma" table="idiomas">
		<id name="idIdioma" type="int" column="ID_IDIOMA">
			<generator class="native"/>
		</id>		
		<property name="nombre" column="NOMBRE" type="string"/>
		<one-to-one name="diccionario" class="Diccionario"/>
	</class>
	
	<class name="Diccionario" table="diccionarios">
		<id name="idDiccionario" type="int" column="ID_DICCIONARIO">
			<generator class="native"/>
		</id>		
		<property name="edicion" column="EDICION" type="string"/>
		<one-to-one name="idioma" class="Idioma"/>
		<map name="definiciones" table="diccionario_definiciones">
            <key column="id"/>
            <index column="palabra" type="string" />
            <element column="significado" type="string" />
        </map>
	</class>

	
</hibernate-mapping>
